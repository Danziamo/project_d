<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Toolbar.ColorPrimary</item>
        <item name="colorPrimaryDark">@color/Toolbar.ColorPrimaryDark</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="tabGravity">fill</item>
        <item name="android:fontFamily">font/font-awesome.ttf</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
        <item name="tabIndicatorColor">#0000FF</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Toolbar.ColorPrimary</item>
        <item name="colorPrimaryDark">@color/Toolbar.ColorPrimaryDark</item>
        <item name="android:tabWidgetStyle">@style/MyCustomTabLayout</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:layout_marginTop">@dimen/spacing_huge</item>

    </style>

    <!--MaterialEditText-->
    <style name="Input">
        <!-- <item name="met_baseColor">@color/blacktext</item>
        <item name="met_underlineColor">@color/gray</item>
        <item name="met_errorColor">@color/red</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Input.Material" parent="Input">
        <item name="met_baseColor">@color/blacktext</item>
        <item name="met_primaryColor">@color/input_base_gray</item>
        <item name="met_underlineColor">@color/gray</item>
        <item name="met_errorColor">@color/red</item>
        <item name="met_clearButton">true</item>
    </style>

    <style name="Input.Material.First" parent="Input.Material">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Button.Material" parent="Button">
        <item name="pb_colorNormal">@android:color/holo_green_light</item>
        <item name="pb_colorPressed">@android:color/holo_green_dark</item>
        <item name="pb_colorProgress">@android:color/holo_purple</item>
    </style>

    <style name="Button.Material.Login" parent="Button.Material">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="ToolbarTheme"></style>

    <style name="AppTheme.Base"></style>


    <!--<style name="SpinnerTheme" parent="android:Widget.Spinner">-->
        <!--<item name="android:actionDropDownStyle">@style/CustomSpinnerStyle</item>-->
    <!--</style>-->

    <!--<style name="CustomSpinnerStyle" parent="android:Widget.Spinner">-->
        <!--<item name="android:background">@color/blacktext2</item>-->
    <!--</style>-->

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_back</item>
    <style name="ProfilePhoto">
        <item name="android:layout_width">150px</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
