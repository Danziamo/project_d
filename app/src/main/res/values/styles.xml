<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">@color/material_deep_teal_200</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_CUSTOM</item>
    </style>

    <style name="CustomHeaderDark" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_CUSTOM</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:layout_marginTop">@dimen/spacing_huge</item>

    </style>

    <!--MaterialEditText-->
    <style name="EditText">
        <!-- <item name="app:met_baseColor">@color/blacktext</item>
        <item name="app:met_underlineColor">@color/gray</item>
        <item name="app:met_errorColor">@color/red</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>




    <style name="ToolbarTheme"></style>

    <style name="AppTheme.Base"></style>

</resources>
