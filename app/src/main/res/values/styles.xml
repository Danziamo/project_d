<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Toolbar.ColorPrimary</item>
        <item name="colorPrimaryDark">@color/Toolbar.ColorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Toolbar.ColorPrimary</item>
        <item name="colorPrimaryDark">@color/Toolbar.ColorPrimaryDark</item>
    </style>

    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">@color/material_deep_teal_200</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_CUSTOM</item>
    </style>

    <style name="CustomHeaderDark" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_CUSTOM</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:layout_marginTop">@dimen/spacing_huge</item>

    </style>

    <!--MaterialEditText-->
    <style name="Input">
        <!-- <item name="met_baseColor">@color/blacktext</item>
        <item name="met_underlineColor">@color/gray</item>
        <item name="met_errorColor">@color/red</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Input.Material" parent="Input">
        <item name="met_baseColor">@color/blacktext</item>
        <item name="met_primaryColor">@color/input_base_blue</item>
        <item name="met_underlineColor">@color/gray</item>
        <item name="met_errorColor">@color/red</item>
        <item name="met_clearButton">true</item>
    </style>

    <style name="Input.Material.First" parent="Input.Material">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Button.Material" parent="Button">
        <item name="pb_colorNormal">@android:color/holo_blue_light</item>
        <item name="pb_colorPressed">@android:color/holo_blue_dark</item>
        <item name="pb_colorProgress">@android:color/holo_purple</item>
    </style>

    <style name="Button.Material.Login" parent="Button.Material">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="ToolbarTheme"></style>

    <style name="AppTheme.Base"></style>

    <!--StyleRatingBar-->

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <!--<item name="android:progressDrawable">@drawable/ratingstars</item>-->
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

</resources>
