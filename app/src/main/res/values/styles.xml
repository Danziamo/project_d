<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/blacktext</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="tabGravity">fill</item>
        <item name="android:fontFamily">font/font-awesome.ttf</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
        <item name="tabIndicatorColor">#0000FF</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="android:tabWidgetStyle">@style/MyCustomTabLayout</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:layout_marginTop">@dimen/spacing_huge</item>

    </style>

    <!--MaterialEditText-->
    <style name="Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Button.DarkGray" parent="Button">
        <item name="android:background">@drawable/rounded_darkgray_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/button_horizontal_padding</item>
    </style>

    <!--<style name="SpinnerTheme" parent="android:Widget.Spinner">-->
        <!--<item name="android:actionDropDownStyle">@style/CustomSpinnerStyle</item>-->
    <!--</style>-->

    <!--<style name="CustomSpinnerStyle" parent="android:Widget.Spinner">-->
        <!--<item name="android:background">@color/blacktext2</item>-->
    <!--</style>-->

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_back</item>
    </style>
    <style name="ProfilePhoto">
        <item name="android:layout_width">150px</item>
        <item name="android:layout_height">150px</item>
    </style>


    <!--StyleMaterialEditText-->
    <style name="MaterialEditText">
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft">@dimen/edit_text_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/edit_text_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/edit_text_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/edit_text_vertical_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/material_edit_text_color</item>
    </style>
        <!--EditTextColor-->

    <style name="MaterialEditTextRed">
        <item name="android:background">@drawable/rounded_edit_text_red</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft">@dimen/edit_text_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/edit_text_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/edit_text_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/edit_text_vertical_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/material_edit_text_color</item>
    </style>

    <style name="MaterialEditTextBlue">
        <item name="android:background">@drawable/rounded_edit_text_blue</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft">@dimen/edit_text_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/edit_text_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/edit_text_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/edit_text_vertical_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/material_edit_text_color</item>
    </style>


    <style name="TextInputLayoutTheme">
        <item name="android:textColorHint">@color/blacktext</item>
        <item name="colorAccent">@color/blacktext</item>
        <item name="colorControlNormal">@color/blacktext</item>
        <item name="colorControlActivated">@color/input_blue</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name = "navigation_buttons_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>

</resources>
