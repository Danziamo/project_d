<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/ll_profile_info_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/profile_photo"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                style="@style/ProfilePhoto"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/my_rating"
                    android:textColor="@color/blacktext"
                    android:layout_marginLeft="@dimen/edit_text_horizontal_padding"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/edit_text_horizontal_padding"
                    android:paddingRight="@dimen/edit_text_horizontal_padding"
                    android:paddingTop="@dimen/edit_text_horizontal_padding"
                    android:paddingBottom="@dimen/edit_text_horizontal_padding"
                    android:background="@drawable/rounded_edit_text"
                    >
                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="left|center_vertical"
                        android:isIndicator="true"
                        android:numStars="5"
                        />

                    <TextView
                        android:id="@+id/tvFeedbacks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical|right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_large"
                        android:textColor="@color/blacktext"
                        android:text="@string/feedbacks" />
                </RelativeLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_last_name"
                android:theme="@style/TextInputLayoutTheme"
                style="@style/TextInputLayoutStyle"
                >

                <EditText
                    android:id="@+id/et_last_name"
                    android:enabled="false"
                    android:hint="@string/last_name"
                    android:inputType="textCapSentences"
                    style="@style/MaterialEditText"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_first_name"
                android:theme="@style/TextInputLayoutTheme"
                style="@style/TextInputLayoutStyle"
                >

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_first_name"
                    android:enabled="false"
                    android:hint="@string/first_name"
                    android:inputType="textCapSentences"
                    style="@style/MaterialEditText"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_phone"
                android:theme="@style/TextInputLayoutTheme"
                style="@style/TextInputLayoutStyle"
                >

                <EditText
                    android:id="@+id/et_phone"
                    android:enabled="false"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    style="@style/MaterialEditText"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_password"
                android:theme="@style/TextInputLayoutTheme"
                style="@style/TextInputLayoutStyle">

                <EditText
                    android:id="@+id/et_password"
                    android:enabled="false"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    style="@style/MaterialEditText"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_below="@id/etPassword"
                android:layout_marginTop="40dp"
                android:text="@string/change"
                android:visibility="gone"
                android:layout_gravity="center"
                style="@style/Button.DarkGray" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
