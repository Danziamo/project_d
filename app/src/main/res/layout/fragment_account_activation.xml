<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_blue"
    tools:context="com.mirsoft.easyfixmaster.AccountActivationFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accountactivate"
        android:id="@+id/et"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="50dp" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/codesms"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />


    <com.dd.processbutton.FlatButton
        style="@style/Button.Material.Login"
        android:layout_width="250dp"
        android:text="@string/btn_authorization"
        android:id="@+id/btn_authorization"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        style="@style/Input.Material"
        android:hint="@string/password"
        android:inputType="number"
        android:id="@+id/et_code_sms"
        android:layout_gravity="center" />

</FrameLayout>
