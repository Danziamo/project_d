<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:textColor="@color/blacktext2"
    android:padding="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:singleLine="true"
            android:textSize="17sp"
            android:id="@+id/tvFullName"
            android:layout_weight="0.5"/>

        <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:id="@+id/ratingBar"
            android:layout_marginTop="20dp"
            android:numStars="5"
            android:isIndicator="true"
            android:layout_weight="0.5"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/tvPhone"
               android:textSize="17sp"
               android:singleLine="true"
               android:gravity="right|center_horizontal"
               android:layout_toLeftOf="@+id/ibtnCalling"
               android:layout_marginRight="5dp"/>

           <ImageButton
               android:id="@+id/ibtnCalling"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_alignParentRight="true"
               android:background="@drawable/image_tube" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/tvReviews"
               android:layout_below="@+id/ibtnCalling"
               android:layout_alignEnd="@+id/ibtnCalling"
               android:layout_alignRight="@id/ibtnCalling"
               android:layout_toLeftOf="@+id/ibtnCalling"
               android:gravity="right|center_horizontal"
               android:paddingRight="30dp"
               android:layout_marginTop="10dp"

                />
       </RelativeLayout>


        
    </LinearLayout>
</LinearLayout>