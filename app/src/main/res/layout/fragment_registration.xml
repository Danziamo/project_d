<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mirsoft.easyfixmaster.fragments.RegistrationFragment"
    android:background="@color/white_blue"
    android:weightSum="1"
    android:id="@+id/zz">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/Input.Material.First"
                app:met_helperText="@string/first_name"
                android:hint="@string/first_name"
                android:id="@+id/etFirstName"
                android:layout_marginTop="20dp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/Input.Material"
                app:met_helperText="@string/last_name"
                android:hint="@string/last_name"
                android:id="@+id/etLastName"
                android:layout_below="@+id/etFirstName" />

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/Input.Material"
                app:met_helperText="@string/country"
                android:hint="@string/country"
                android:id="@+id/etCountry"
                android:layout_below="@+id/etLastName" />

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/Input.Material"
                app:met_helperText="@string/city"
                android:hint="@string/city"
                android:id="@+id/etCity"
                android:layout_below="@+id/etCountry" />

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/Input.Material"
                app:met_helperText="@string/phone_number"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:id="@+id/etPhone"
                android:layout_below="@+id/etCity" />

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/Input.Material"
                app:met_helperText="@string/password"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:id="@+id/etPassword"
                android:layout_below="@+id/etPhone" />

            <com.dd.processbutton.FlatButton
                style="@style/Button.Material"
                android:text="@string/registration"
                android:id="@+id/btnSubmit"
                android:layout_below="@id/etPassword"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="30dp" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
