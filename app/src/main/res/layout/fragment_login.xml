<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mirsoft.easyfixmaster.LoginFragment"
    android:background="@color/white_blue"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="@color/blacktext"
        app:met_primaryColor="@color/blacktext"
        app:met_underlineColor="@color/gray"
        app:met_errorColor="@color/red"
        app:met_helperText="@string/last_name"
        android:singleLine="true"
        android:hint="@string/last_name"
        android:id="@+id/view"
        android:layout_below="@+id/view5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="@color/blacktext"
        app:met_underlineColor="@color/gray"
        app:met_primaryColor="@color/blacktext"
        app:met_errorColor="#ff0000"
        app:met_helperText="@string/first_name"
        android:singleLine="true"
        app:met_floatingLabel="highlight"
        app:met_minCharacters="5"
        app:met_maxCharacters="10"
        android:hint="@string/first_name"
        android:layout_below="@+id/view4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view5" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_underlineColor="@color/gray"
        app:met_baseColor="@color/blacktext"
        app:met_primaryColor="@color/blacktext"
        app:met_errorColor="#ff0000"
        android:singleLine="true"
        app:met_floatingLabel="highlight"
        app:met_minCharacters="5"
        app:met_maxCharacters="10"
        app:met_helperText="@string/country"
        android:hint="@string/country"
        android:id="@+id/view4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="@color/blacktext"
        app:met_underlineColor="@color/gray"
        app:met_primaryColor="@color/blacktext"
        app:met_errorColor="#ff0000"
        android:singleLine="true"
        app:met_floatingLabel="highlight"
        app:met_minCharacters="5"
        app:met_maxCharacters="10"
        app:met_helperText="@string/city"
        android:hint="@string/city"
        android:layout_below="@+id/view3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="@color/blacktext"
        app:met_primaryColor="@color/blacktext"
        app:met_underlineColor="@color/gray"
        app:met_errorColor="#ff0000"
        app:met_floatingLabel="highlight"
        app:met_minCharacters="5"
        app:met_maxCharacters="10"
        android:singleLine="true"
        android:hint="@string/phone_number"
        app:met_helperText="@string/phone_number"
        android:layout_below="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view3" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="@color/blacktext"
        app:met_primaryColor="@color/blacktext"
        app:met_underlineColor="@color/gray"
        app:met_errorColor="#ff0000"
        app:met_floatingLabel="highlight"
        app:met_minCharacters="5"
        app:met_maxCharacters="10"
        android:hint="@string/password"
        app:met_helperText="@string/password"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view2" />



</RelativeLayout>
