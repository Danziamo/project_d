<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mirsoft.easyfix.MasterInfoFragment">

    <android.support.v7.widget.AppCompatRatingBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        style="@style/Input.Material"
        app:met_helperText="Name"
        android:hint="Name"
        android:inputType="textPersonName"
        android:enabled="false"
        android:id="@+id/etFullName" />

    <com.rengwuxian.materialedittext.MaterialEditText
        style="@style/Input.Material"
        android:id="@+id/etPhone"
        app:met_helperText="Phone"
        android:hint="@string/phone_number"
        android:enabled="false"
        android:inputType="phone" />


    <com.rengwuxian.materialedittext.MaterialEditText
        style="@style/Input.Material"
        app:met_helperText="Address"
        android:hint="Address"
        android:inputType="text"
        android:id="@+id/etClientAddress" />


    <com.rengwuxian.materialedittext.MaterialEditText
        style="@style/Input.Material"
        app:met_helperText="@string/phone_number"
        android:hint="@string/phone_number"
        android:inputType="phone"
        android:id="@+id/etClientPhone" />

    <com.rengwuxian.materialedittext.MaterialEditText
        style="@style/Input.Material"
        app:met_helperText="description"
        android:hint="description"
        android:inputType="text"
        android:id="@+id/etClientDescription" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />

</LinearLayout>
