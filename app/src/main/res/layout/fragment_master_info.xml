<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mirsoft.easyfix.MasterInfoFragment">

    <RatingBar
        android:id="@+id/rating_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="0.5"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        style="@style/Input.Material"
        app:met_helperText="@string/name"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:enabled="false"
        android:id="@+id/etFullName" />

    <com.rengwuxian.materialedittext.MaterialEditText
        style="@style/Input.Material"
        android:id="@+id/etPhone"
        app:met_helperText="@string/phone_number"
        android:hint="@string/phone_number"
        android:enabled="false"
        android:inputType="phone" />

    <com.rengwuxian.materialedittext.MaterialEditText
        style="@style/Input.Material"
        android:id="@+id/etProfession"
        app:met_helperText="@string/profession"
        android:hint="@string/profession"
        android:enabled="false"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        style="@style/Input.Material"
        app:met_helperText="@string/adress"
        android:hint="@string/adress"
        android:inputType="text"
        android:id="@+id/etClientAddress" />

    <com.rengwuxian.materialedittext.MaterialEditText
        style="@style/Input.Material"
        app:met_helperText="@string/phone_number"
        android:hint="@string/phone_number"
        android:inputType="phone"
        android:id="@+id/etClientPhone" />

    <com.rengwuxian.materialedittext.MaterialEditText
        style="@style/Input.Material"
        app:met_helperText="@string/description"
        android:hint="@string/description"
        android:inputType="text"
        android:id="@+id/etClientDescription" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:layout_gravity="center"/>

</LinearLayout>
